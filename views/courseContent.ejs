<!DOCTYPE html>
  <html lang="en">
    <head>
        <meta charset="utf-8">
        <% include partials/adminHead.ejs %>
        <title><%= lessons[0].courseId.name %></title>
    </head>
    <body> 
        <div class="wrapper">
            <!-- Sidebar -->
            <% include partials/adminNav.ejs %>
            <!-- Page Content -->
            <div id="content">

                <div class="album bg-light">
                    <div class="container">
        
                        <div class="row">
                            <div class="col-lg-12 bg-white p-4 box-shadow">
                                <h3 class="mb-4"> <%= lessons[0].courseId.name %></h3>

                                <table class="table table-striped table-bordered table-hover">
                                    <tr class="bg-dark text-white">
                                        <th>#</th>
                                        <th>Name</th>
                                        <th>Description</th>
                                        <th></th>
                                    </tr>
                                    <tbody>
                                        <% for(var i=0; i < lessons.length; i++){ %>
                                          <tr>
                                              <td><%= i+1 %></td>
                                              <td><%= lessons[i].name %></td>
                                              <td><%= lessons[i].description %></td>
                                              <td><button type="button" class="btn btn-danger" data-videopath="<%= lessons[i].videoPath %>" onclick="showVideo(this)"><i class="fa fa-video-camera"></i> View</button></td>
                                          </tr>
                                          <% } %>
                                    </tbody>
                                 </table>
                                 
                            </div>
                        </div>
                      </div>
                </div>



                <div class="modal fade " id="videoModal">
                    <div class="modal-dialog modal-lg">
                        <div class="modal-content">
                    
                        <!-- Modal Header -->
                        <div class="modal-header">
                            <h4 class="modal-title">Modal Heading</h4>
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                        </div>
                    
                        <!-- Modal body -->
                        <div class="modal-body">
                            <video id="videoPlayer" style="max-width: 100%;height: auto;" controls autobuffer="false"></video>
                        </div>
                    
                        <!-- Modal footer -->
                        <div class="modal-footer">
                            <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                        </div>
                    
                        </div>
                    </div>
                </div>


            </div>
        </div>       

        <% include partials/adminFooter.ejs %>

          <script type="text/javascript">
            function showVideo(element){
               var videoPath = $(element).attr('data-videopath');
                $('#videoPlayer').attr('src','/assets/videos/'+videoPath);
                $('#videoModal').modal('show');
            }
          </script>

    </body>
  </html>