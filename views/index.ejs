<!DOCTYPE html>
<html lang="en">

<head>
  <% include partials/clientHead.ejs %>
    <title>Home</title>
</head>

<body>

  <% include partials/clientNav.ejs %>
    <main role="main">

      <section class="jumbotron text-center">
        <div class="container">
          <h1 class="jumbotron-heading">Take the world's best courses, online!</h1>
          <p class="lead text-muted">Join millions of students and instructors in the worldâ€™s largest online learning marketplace</p>
          <p>
            <a href="/register" class="btn btn-success my-2 " id="register">Join For Free!</a>
          </p>
        </div>
      </section>

      <div class="album py-5 bg-light">
        <div class="container">

          <div class="row">

            <% for(var i=0; i < course.length; i++){ %>

              <div class="col-md-4">
                <div class="card mb-4 box-shadow">
                  <img class="card-img-top" height="200" src="assets/images/<%- course[i].coverPhoto %>" alt="Card image cap">
                  <div class="card-body">
                    <h5>
                      <%= course[i].name %>
                    </h5>
                    <p class="card-text">
                      By
                      <%= course[i].instructor.name %>
                    </p>
                    <div class="d-flex justify-content-between align-items-center">
                      <a href="courseDetails/<%= course[i]._id %>" class="btn btn-primary">View</a>
                      <small class="text-muted">
                        <i class="fa fa-clock-o"></i>
                        <%= course[i].duration %> Hours</small>
                    </div>
                  </div>
                </div>
              </div>
              <% } %>

          </div>
        </div>
      </div>

    </main>


    <% include partials/clientFooter.ejs %>
</body>

</html>