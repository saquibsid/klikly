<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <% include partials/adminHead.ejs %>
        <title>Dashboard</title>
</head>

<body>
    <div class="wrapper">
        <!-- Sidebar -->
        <% include partials/adminNav.ejs %>
            <!-- Page Content -->
            <div id="content">

                <div class="album bg-light">
                    <div class="container">

                        <div class="row">
                            <div class="col-lg-12 bg-white p-4 box-shadow">
                                <h3 class="mb-4">My Courses</h3>

                                <table class="table table-striped table-bordered table-hover">
                                    <tr class="bg-dark text-white">
                                        <th>#</th>
                                        <th>Photo</th>
                                        <th>Course Name</th>
                                        <th>Category</th>
                                        <th>Duration</th>
                                        <th></th>
                                    </tr>
                                    <tbody>
                                        <% for(var i=0; i < courses.length; i++){ %>
                                            <tr>
                                                <td>
                                                    <%= i+1 %>
                                                </td>
                                                <td>
                                                    <img src="<%= courses[i].coverPhoto %>" height="80px" />
                                                </td>
                                                <td>
                                                    <%= courses[i].name %>
                                                </td>
                                                <td>
                                                    <%= courses[i].category %>
                                                </td>
                                                <td>
                                                    <%= courses[i].duration %> Hours</td>
                                                <td>
                                                    <a href="/courseContent/<%= courses[i]._id %>" class="btn btn-primary">View</a>
                                                </td>
                                            </tr>
                                            <% } %>
                                    </tbody>
                                </table>

                            </div>
                        </div>
                    </div>
                </div>


            </div>
    </div>

    <% include partials/adminFooter.ejs %>

        <script type="text/javascript">
        </script>

</body>

</html>