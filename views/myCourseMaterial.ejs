<!DOCTYPE html>
  <html lang="en">
    <head>
        <meta charset="utf-8">
        <% include partials/adminHead.ejs %>
        <title>My Course Material</title>
    </head>
    <body> 
        <div class="wrapper">
            <!-- Sidebar -->
            <% include partials/adminNav.ejs %>
            <!-- Page Content -->
            <div id="content">

                <div class="album bg-light">
                    <div class="container">
        
                        <div class="row">
                            <div class="col-lg-12 bg-white p-4 box-shadow">
                                <h3 class="mb-4">My Course Materials</h3>

                                <table class="table table-striped table-bordered table-hover">
                                    <tr class="bg-dark text-white">
                                        <th>#</th>
                                        <th>Course Name</th>
                                        <th>File Name</th>
                                        <th>Descirption</th>
                                        <th></th>
                                    </tr>
                                    <tbody>
                                        <% for(var i=0; i < material.length; i++){ %>
                                          <tr>
                                              <td><%= i+1 %></td>
                                              <td><%= material[i].courseId.name %></td>
                                              <td><%= material[i].name %></td>
                                              <td><%= material[i].description %> Hours</td>
                                              <td><a href="/assets/downloads/<%= material[i].path %>" target="_blank" class="btn btn-primary">Download</a></td>
                                          </tr>
                                          <% } %>
                                    </tbody>
                                 </table>

                            </div>
                        </div>
                      </div>
                </div>


            </div>
        </div>       

        <% include partials/adminFooter.ejs %>

          <script type="text/javascript">
          </script>

    </body>
  </html>